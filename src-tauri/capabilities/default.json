{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/yt-dlp",
          "sidecar": true,
          "args": [
            "-f",
            "bestaudio",
            "-g",
            {
              "validator": "https://www\\.youtube\\.com/watch\\?v=\\S+"
            }
          ]
        }
      ]
    },
    "shell:allow-open"
  ]
}
